#version 430
layout(local_size_x = 8, local_size_y = 8) in;
layout(rgba32f, binding = 0) uniform image2D img_output;

void main()
{
	ivec2 pixel = ivec2(gl_GlobalInvocationID.xy);

	int x = pixel.x;
	int y = pixel.y;

	if ((x/ 16 +y / 16 % 2 == 0))
	{
		imageStore(img_output, pixel, vec4(1.0, 1.0, 1.0, 1.0));
	}
	else
	{
		imageStore(img_output, pixel, vec4(1.0, 0.0, 0.0, 1.0));
	}
}